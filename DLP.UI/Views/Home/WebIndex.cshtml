    <script>
        function myMoveFunction(string) {
            if (string === "Tls") {
                $("#Tls").toggleClass("inv");
                //alert(string);
            }
            //
            else if (string === "Dlp") {
                $("#Dlp").toggleClass("inv");
                //alert(string);
            }
            else if (string === "SafeT") {
                $("#SafeT").toggleClass("inv");
                //alert(string);
            }
            else if (string === "Pass") {
                $("#Pass").toggleClass("inv");
                //alert(string);
            }

        };
    </script>

