                            <br />
                        </div>
                    </div>
                </tr>
            </thead>
        }
        <tbody>
            @{int i = 0;}
            @foreach (DLP.Entities.V_DlpTlsInfo dlp in Model.v_DlpTlsInfo)
            {
                <tr>
                    @* TLS - הצפנה מאחורי הקלעים *@
                    <td class="@(dlp.Dlp_ID > 0 ? "green_bkrnd" : "red_bkrnd")">
                        @*@(dlp.Dlp_ID > 0 ? "קיים עבור :" : "לא קיים עבור : ")
                            <br />*@
                        @if (dlp.Dlp_ID > 0)
                        {
                            @*<svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-emoji-smile-fill" /></svg>*@
