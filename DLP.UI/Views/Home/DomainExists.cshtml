                        }
                        else
                        {
                            <svg class="bi pe-none me-2 svg-lg">@*<use xlink:href="#bi-emoji-frown-fill" />*@</svg>
                            <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-hand-thumbs-down-fill" /></svg>
                        }
                        @*<br />*@&nbsp;&nbsp;&nbsp;
                        @Model.SearchDomain.ToUpper()
                        <div id="Tlss" class="inv popUpBubble">
                            <br />
                            <img src="~/Content/Images/DLP/TlsExplainYes.jpg" height="273" width="932" />
                            <br />
                        </div>

                    </td>

                    @* DLP - החרגה ממערכת למניעת דלף מידע *@
                    <td class="@(dlp.Dlp_ID > 0 ? "green_bkrnd" : "red_bkrnd")">
                        @(dlp.Dlp_ID > 0 ? "קיימת עבור :" : "לא קיימת עבור : ")
                        <br />
                        @dlp.EmailAddress
                    </td>

                    @* סיסמה קבועה ל-SafeT *@
                    <td class="@(Model.IsSafetPass ? "green_bkrnd" : "red_bkrnd")" style="text-align: center; vertical-align: middle;">
                        @if (Model.IsSafetPass)
                        {
                            @*<span class="glyphicon glyphicon-ok-circle"></span>*@
                            <svg class="bi pe-none me-2 svg-lg">@*<use xlink:href="#bi-emoji-smile-fill" />*@</svg>
                            <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-hand-thumbs-up-fill" /></svg>
                        }
                        else
                        {
                            @*<span class="glyphicon glyphicon-ban-circle"></span>*@
                            <svg class="bi pe-none me-2 svg-lg">@*<use xlink:href="#bi-emoji-frown-fill" />*@</svg>
                            <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-hand-thumbs-down-fill" /></svg>
                        }
                    </td>

                    @* שליחת קבצים מוגנים בסיסמה *@
                    <td class="@(((dlp.EmailType) || (Model.SearchDomain != Model.SearchText)) ? "green_bkrnd" : "red_bkrnd")" style="text-align: center; vertical-align: middle;">
                        @*קיים עבור:
                                <br />
                                @Model.SearchDomain.ToUpper()
                            </td>*@

                        @if ((dlp.EmailType) || (Model.SearchDomain != Model.SearchText))
                        {
                            @*<td class="green_bkrnd">
                                    קיים עבור:
                                    <br />
                                    @Model.SearchDomain.ToUpper()
                                </td>*@
                            <svg class="bi pe-none me-2 svg-lg">@*<use xlink:href="#bi-emoji-smile-fill" />*@</svg>
                            <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-hand-thumbs-up-fill" /></svg>
                        }
                        else
                        {
                            @*<td class="red_bkrnd">
                                    לא קיים עבור :
                                    <br />
                                    @Model.SearchDomain.ToUpper()
                                </td>*@
                            <svg class="bi pe-none me-2 svg-lg">@*<use xlink:href="#bi-emoji-frown-fill" />*@</svg>
                            <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-hand-thumbs-down-fill" /></svg>
                        }
                    </td>

                    @* עבור *@
                    <td class="green_bkrnd" style="vertical-align: middle;">
                        @Model.GetEmpCompany(Model.RecipientCompany)
                    </td>
                    @*@if ((Model.IsDomainDlp == false && Model.IsDomainSearch) || (Model.IsDomainDlp == false && Model.IsDomainSearch == false && Model.IsEmailDlp == false && Model.IsSafetPass == false))
                        {*@

                    @* פעולות *@
                    @if (@i == 0)
                    {
                        <td class="green_bkrnd" style="font-size: 1em;">
                            <a title="פתיחת קריאה להחרגת כתובת זו ממערכת דלף מידע" href="http://mvs-sysaid.mvs.co.il/SubmitSR.jsp" target="_blank">
                                <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-person-plus" /></svg>
                            </a>
                        </td>
                        //&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <td class="green_bkrnd" style="font-size: 1em;">
                            <a title="צפיה בכל התוצאות של דומיין זה" onclick="location.href='@Url.Action("Search","Home", new { searchText = Model.SearchDomain })'">
                                @*href='@Url.Action("Index2", Model)'*@
                                <svg class="bi pe-none me-2 svg-lg"><use xlink:href="#bi-list" /></svg>
                            </a>
                        </td>
                    }
                    else
                    {
                        <td class="green_bkrnd" style="font-size: 1em;"></td>
                    }
                    @*}*@
                    @{i++;
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

