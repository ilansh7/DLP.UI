                    </th>
                    <th class="text-end div_border" scope="col">
                        עבור
                    </th>
                    @*@if ((Model.IsDomainDlp == false && Model.IsDomainSearch) || (Model.IsDomainDlp == false && Model.IsDomainSearch == false && Model.IsEmailDlp == false && Model.IsSafetPass == false))
                        {*@
                    <th class="text-end" scope="col" colspan="2">
                        פעולות
                    </th>
                    @*}*@
                </tr>
                <tr>
                    <div class="col-lg-12 divframe_in">
                        @*<div class="col-lg-3 divframe_in">
                                </div>
                                <div class="col-lg-3 divframe_in">
                                </div>
                                <div class="col-lg-3 divframe_in">
                            </div>*@
                        <div id="Tls-s" class="inv col-lg-12 divframe_in">
                            <br />
